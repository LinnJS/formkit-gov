{
  "name": "formkit-gov",
  "version": "0.0.0",
  "private": true,
  "description": "Production-grade form system for government applications built on VA Design System, React Hook Form, and Zod",
  "keywords": [
    "forms",
    "react",
    "zod",
    "react-hook-form",
    "va-design-system",
    "uswds",
    "government",
    "accessibility",
    "wcag",
    "a11y"
  ],
  "homepage": "https://formkit-gov.org",
  "bugs": {
    "url": "https://github.com/LinnJS/formkit-gov/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LinnJS/formkit-gov.git"
  },
  "license": "MIT",
  "author": "LinnJS",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm sync:assets && turbo build",
    "changeset": "changeset",
    "clean": "turbo clean && rm -rf node_modules",
    "dev": "turbo dev --concurrency 15",
    "dev:open": "turbo dev:open --concurrency 15",
    "e2e": "pnpm --filter @formkit-gov/storybook test:e2e",
    "format": "prettier --write \"**/*.{ts,tsx,md,mdx,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,mdx,json}\"",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "lint:md": "markdownlint-cli2 \"**/*.md\" \"#node_modules\" \"#**/node_modules\"",
    "lint:md:fix": "markdownlint-cli2 --fix \"**/*.md\" \"#node_modules\" \"#**/node_modules\"",
    "prepare": "husky",
    "release": "turbo build && changeset publish",
    "sync:assets": "node scripts/sync-assets.mjs",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
    "test:storybook": "pnpm --filter @formkit-gov/storybook test:storybook",
    "test:storybook:ci": "pnpm --filter @formkit-gov/storybook test:storybook:ci",
    "test:watch": "turbo test:watch",
    "typecheck": "turbo typecheck",
    "version-packages": "changeset version"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.10",
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@formkit-gov/eslint-config": "workspace:*",
    "@formkit-gov/typescript-config": "workspace:*",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "markdownlint-cli2": "^0.20.0",
    "prettier": "^3.7.2",
    "prettier-plugin-packagejson": "^2.5.6",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "turbo": "^2.7.2"
  },
  "packageManager": "pnpm@9.14.4",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
